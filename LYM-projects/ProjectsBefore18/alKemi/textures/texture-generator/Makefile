# Automatically generated by configure - do not modify
prefix=/usr/local
bindir=/usr/local/bin
mandir=/usr/local/man
MAKE=make
CXX=g++
TARGET_KERNEL=UNIX
LDFLAGS=-Wall -L. -L./lib -L/usr/local/lib -L/sw/lib -L/usr/X11R6/lib -L./../lib 
LDLIBS=  -lstdc++ -lGL -lglfw3 -lX11  -lXxf86vm -lpthread -lXrandr -lm  -lXi -lopencv_core -lopencv_imgproc -lopencv_highgui -lGLEW   
OPTFLAGS= -I. -I./include -I/sw/include -I/usr/include -I/usr/X11R6/include  -I/usr/X11R6/include/X11  -I/usr/local/include -g  
SRC_PATH=./

VERSION=1.0.3

VPATH=$(SRC_PATH)

CXXFLAGS= $(OPTFLAGS) -Wall -I$(SRC_PATH)
LDFLAGS+= -g 

PROG=DM$(EXESUF)

#---------------------------------------------
#-----Dirs------------------------------------
#---------------------------------------------

########### TERMPORARY DIRECTORIES
# temporary storage of object files
local_libdir = ./
# temporary storage of binary files
local_execdir = ./
# temporary file to store errors and warning
error_file = ./.make_error

#---------------------------------------------
#-----Source files----------------------------
#---------------------------------------------

SRC_BASE = image-generator.cpp 

#---------------------------------------------
#-----Compile and link------------------------
#---------------------------------------------

SRC_FILES = $(SRC_BASE:%=$(SRC_PATH)/%) 
OBJ_FILES = $(SRC_BASE:%.cpp=$(local_libdir)/%.o) 

NB_LINE = -1

image-generator(EXESUF): $(local_execdir)/image-generator

all: $(PROG)

$(local_libdir)/%.o : $(SRC_PATH)/%.cpp
	@echo " " > $(error_file)
	@echo -n "CC $* "
	-@$(CXX) $(CXXFLAGS) -c -o $(local_libdir)/$*.o $*.cpp 2>> $(error_file)
	@cat $(error_file)
	@test `cat $(error_file) | grep -E "^(\./|/)?([^:]*:)+[0-9]+: err" | wc -l` -eq 0

$(local_execdir)/image-generator: create_dir $(OBJ_FILES)
	@echo
	@echo "Changing to object files directory"
	@cd ../obj
	@echo
	-@$(CXX) $(LDFLAGS) -o $@ $(OBJ_FILES) $(LDLIBS) 2> $(error_file)
	@echo LD image-generator
	@cat $(error_file)
	@test `cat $(error_file) | wc -l` -eq 0 
	@rm -f $(error_file)

create_dir:
	@echo "Creating object files directory"
	@mkdir -p ../obj
	@echo "Creating binary directory"
	@mkdir -p $(local_execdir)/
	@echo

install:  all
	install -m755 $(local_execdir)/image-generator $(prefix)/bin/image-generator

#---------------------------------------------
#-----Other stuff-----------------------------
#---------------------------------------------
SUBMISSIONS = $(SRC_PATH)/*cpp $(SRC_PATH)/*h  README INSTALL.txt

depend:
	makedepend $(CXXFLAGS) -Y $(SRC_FILES)

clean:
	@echo "Cleaning temporary files"
	-@rm -f $(OBJ_FILES) $(error_file)

dist:
	rm -rf image-generator-$(VERSION) image-generator-$(VERSION).tar.gz bin obj
	mkdir image-generator-$(VERSION) bin obj
	cp -rf $(SUBMISSIONS) image-generator-$(VERSION)
	cp -f Makefile.archive image-generator-$(VERSION)/Makefile
	tar zcf image-generator-$(VERSION).tgz bin obj image-generator-$(VERSION) 

# DO NOT DELETE

